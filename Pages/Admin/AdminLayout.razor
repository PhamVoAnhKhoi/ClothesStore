@using System.Collections.Generic
@inherits LayoutComponentBase 
<div class="bg-info text-white p-2"> 
    <span class="navbar-brand ml-2">CLOTHES STORE Administration</span> 
    <a class="btn btn-outline-light mx-2" asp-controller="Home" asp-action="Index" href="/User/SignIn">LogOut</a>
</div>
<div class="container-fluid">
    <div class="row p-2">
        <div class="col-3">
            <div class="d-grid gap-1">
                <NavLink class="btn btn-outline-primary" href="/admin/products" ActiveClass="btn-primary text-white"
                    Match="NavLinkMatch.Prefix"> Products </NavLink>
                <NavLink class="btn btn-outline-primary" href="/admin/orders" ActiveClass="btn-primary text-white"
                    Match="NavLinkMatch.Prefix"> Orders </NavLink>
                <NavLink class="btn btn-outline-primary" href="/admin/categories" ActiveClass="btn-primary text-white"
                    Match="NavLinkMatch.Prefix"> Categories</NavLink>
                <NavLink class="btn btn-outline-primary" href="/admin/accounts" ActiveClass="btn-primary text-white"
                    Match="NavLinkMatch.Prefix"> Accounts</NavLink>
            </div>
        </div>
        <div class="col"> @Body </div>
    </div>
</div>