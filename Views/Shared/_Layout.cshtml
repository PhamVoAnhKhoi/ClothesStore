<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ClothesStore</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="bg-pink text-dark border-bottom p-2">
        <div class="container-fluid">
            <div class="row">
                <div class="col navbar-brand">
                    <a class="text-decoration-none text-dark" asp-controller="Home" asp-action="Index">CLOTHES STORE</a>
                </div>
                <div class="col-4">
                    <form asp-controller="Product" asp-action="Search" method="post" class="d-flex">
                        <input class="form-control border border-dark me-2" type="text" name="searchTerm" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-light" type="submit">Search</button>
                    </form>
                </div>
                <div class="col-5 navbar-text text-end">
                    <vc:cart-summary />
                </div>
                <div class="col-1 text-center">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form asp-controller="User" asp-action="SignOut" method="post">
                            <button type="submit" class="btn btn-outline-light mx-2">Logout</button>
                        </form>
                    }
                    else
                    {
                        <a class="btn btn-outline-light mx-2" asp-controller="User" asp-action="SignIn">Login</a>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="row m-1 p-1">
        <div class="col-12">
            @RenderBody()
        </div>
    </div>
    
</body>
