@model IEnumerable<ClothesStore.Models.Category>
<div class="container">
    <div class="row">
        <div class="col-6">
            <h3>Thể loại</h3>
        </div>
    </div>
    <div class="row">
        @foreach (var category in Model)
        {          
            <div class="col-md-2">
                <a class="text-decoration-none" asp-controller="Product" asp-action="ProductOfEachCategory" asp-route-category="@category.CategoryName" >
                    <div class="mb-4 text-center text-dark">
                        <img src="@category.CategoryImage" class="card-img-top border border-dark rounded-circle" alt="@category.CategoryName" style="width: 150px; height: 150px;"/>
                        <div class="card-body">
                            <strong class="card-title ">@category.CategoryName</strong>
                        </div>
                    </div>   
                </a>
            </div>
        }
    </div>
</div>
