@model IEnumerable<ClothesStore.Models.Product>

@{
    ViewData["Title"] = "Search Results";
}

<h2>Search Results for "@ViewData["SearchTerm"]"</h2>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-2">
            <a class="text-decoration-none" href="@Url.Action("Detail", "ProductDetail", new { productId = product.ProductID })">
                <div class="card mb-4 shadow-sm text-dark">
                    <img src="@product.ProductImage" class="card-img-top" alt="@product.Name">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">$@product.Price</small>
                        </div>
                    </div>
                </div>
            </a>           
        </div>
    }
</div>
