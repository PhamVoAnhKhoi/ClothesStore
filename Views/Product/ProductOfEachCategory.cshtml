@model IEnumerable<ClothesStore.Models.Product>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>@ViewData["Category"]</h2>
        </div>
    </div>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-2">
                <a class="text-decoration-none" href="@Url.Action("Detail", "ProductDetail", new { productId = product.ProductID })">
                    <div class="card mb-4 shadow-sm text-dark">
                        <img src="@product.ProductImage" class="card-img-top" alt="@product.Name" />
                        <div class="card-body">
                            <strong class="card-title">@product.Name</strong>
                            <div class="d-flex justify-content-between align-items-center">
                                 <small class="text-muted">@product.Price.ToString("c")</small> 
                            </div>
                        </div>
                    </div>   
                </a>
            </div>
        }
    </div>
</div>
